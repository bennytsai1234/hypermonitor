# ============================================
# Hyper Trading Signal — Environment Variables
# ============================================
# Copy this to .env and fill in real values

# Worker API (for reading Hyperliquid data)
WORKER_URL=https://hyper-monitor-worker.bennytsai0711.workers.dev

# OKX V5 API Credentials
OKX_API_KEY=your-api-key-here
OKX_SECRET_KEY=your-secret-key-here
OKX_PASSPHRASE=your-passphrase-here

# Set to "true" to use OKX Demo (simulated trading)
OKX_DEMO=true

# Trading Parameters
INST_ID=BTC-USDT-SWAP
LEVERAGE=10
# Ratio: 1/100000 = every 100万 D_H → 10 USD order
RATIO=0.00001
# Minimum delta to trigger trade (in USD absolute value)
MIN_DELTA=500000
# Maximum single order value in USD
MAX_ORDER_USD=2000

# Polling interval in seconds
POLL_INTERVAL=10
